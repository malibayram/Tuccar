<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Screen.detail.basket">

    <TextView
        android:id="@+id/basketSize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top|center"
        android:background="#660099"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Payment"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery address : "
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        />
    <EditText
        android:id="@+id/adres"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="90dp"
        android:textColor="@color/black"
        android:hint="add address"
        android:gravity="center"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="129dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center|left">

        <RadioButton
            android:id="@+id/doorPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="10dp"
            android:text="pay at the door" />
        <RadioButton
            android:id="@+id/onlinePay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:text="Online payment" />
    </RadioGroup>

    <Button
        android:id="@+id/confirmPay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="confirm and finish"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="129dp" />




</FrameLayout>